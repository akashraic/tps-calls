{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "allowJs": true,
    "module": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom", "esnext"],
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/tps-calls-shared/dist"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}