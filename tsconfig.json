{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2016", "dom"],
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"],
}